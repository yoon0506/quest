<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".FragmentAdd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".FragmentAdd">

            <RelativeLayout
                android:id="@+id/add_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navibar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back"
                app:layout_constraintBottom_toBottomOf="@id/add_layout_top"
                app:layout_constraintStart_toStartOf="@+id/add_layout_top"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/done"
                app:layout_constraintBottom_toBottomOf="@id/add_layout_top"
                app:layout_constraintEnd_toEndOf="@+id/add_layout_top"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/add_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="12"
                android:padding="13dp"
                android:fontFamily="@font/nanum_square_b"
                android:hint="제목 입력"
                android:inputType="text"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@id/add_layout_top"
                app:layout_constraintEnd_toStartOf="@+id/add_button"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/add_content_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:ems="50"
                android:hint="내용 입력"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_layout_top" />
            <View
                android:id="@+id/add_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_layout_top"
                />

            <RadioGroup
                android:id="@+id/colorPickerGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >

                <ToggleButton
                    android:id="@+id/colorBtn1"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/toggle_color_1"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn2"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_2"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn3"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_3"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn4"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_4"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn5"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_5"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn6"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_6"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn7"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_7"
                    android:textOff=" "
                    android:textOn=" " />

                <ToggleButton
                    android:id="@+id/colorBtn8"
                    style="@style/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/toggle_color_8"
                    android:textOff=" "
                    android:textOn=" " />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</layout>